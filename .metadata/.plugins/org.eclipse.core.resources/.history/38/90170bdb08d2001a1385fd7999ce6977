
public class CalculaIRPF {
	public static void main (String[]args) {
	double salario = 3300.0;
	double percentual_ir_sete_e_meio = (7.5/100);
	double percentual_ir_quinze = (15/100);
	double percentual_ir_vintedois_e_meio = (22.5/100);
	System.out.println();
	if (salario >= 1900.00 && salario <= 2800.00) {System.out.println("O IR é de 7.5% e pode deduzir na declaração o valor de R$ 142");}
	if (salario > 2800.00 && salario <= 3751.00) {System.out.println("O IR é de 15% e pode deduzir R$ 350");}
	if (salario > 3751.00 && salario <= 4664.00) {System.out.println("O IR é de 22.5% e pode deduzir R$ 636");}
	else {System.out.println("Você é isento!!!");}

	}
}
