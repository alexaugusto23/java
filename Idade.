
java
import java.util.Scanner;

public class Main

{

                public static void main(String[] args) {

                    Scanner input = new Scanner(System.in);

                    int idade = 23;

        idade = input.nextInt();

                               System.out.println("Qual a sua idade");

                               System.out.println("Sua idade é: " + idade);

                               if (idade >= 18){System.out.println("Você é maior de idade, acesso permitido");}

                               else{System.out.println("Você não tem acesso");}

                              

                               input.close();

                }

}
